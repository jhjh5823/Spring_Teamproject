<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="notice">

 <!-- 최대 글번호 얻기 -->
 <select id="numMax" resultType="Integer">
   select max(num) from notice
 </select>

<!-- 글쓰기-->
<insert id="insertDao" parameterType="noticeDTO">
  insert into notice(writer,subject,content,regdate,emer) 
  values(#{writer},#{subject},#{content},NOW(),#{emer})
</insert>

 <!-- 리스트 -->
 <select id="listDao"  resultType="noticeDTO">
    select * from notice
   order by  emer desc,noticeno desc
   limit #{start},#{cnt}
 </select>
 
  <!-- 검색리스트 -->
 <select id="searchListDao" parameterType="java.util.Map" resultType="noticeDTO">
   select * from notice 
   where ${keyField} like '%${keyWord}%'
 </select>
 
 <!-- 글 갯수 , 페이지 처리-->
 <select id="selectCount" resultType="int">
   select count(*) from notice
 </select>
 
 <!-- 조회수 증가 -->
 <update id="readCount" parameterType="int">
   update notice
   set readcount=readcount+1
   where noticeno=#{noticeno}
 </update>
 
  <!-- 글내용보기, 글수정 폼 -->
 <select id="getNotice" parameterType="int" resultType="noticeDTO">
   select * from notice
   where noticeno=#{noticeno}
 </select>
 
  <!-- DB글 수정 -->
 <update id="noticeUpdate" parameterType="noticeDTO">
   update notice
     set writer=#{writer},
     subject=#{subject},
     content=#{content}
   where noticeno=#{noticeno} 
 </update>

 <!-- 글삭제 -->
 <delete id="noticeDelete" parameterType="int">
   delete from notice
   where noticeno=#{noticeno}
 </delete>
</mapper>